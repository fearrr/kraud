<% Time.zone = 'Moscow'
   t = Time.zone.now
   if t.hour >= 8 && t.hour <= 17 && t.wday != 6 && t.wday !=0
     @hours = "Сейчас работаем"
   else
     @hours = "Сейчас не работаем"
   end
%>
<% if logged_in? %>
    <div class="main_admin">
      Вы вошли как <b><%= current_admin.name %></b> &nbsp;|&nbsp;
      <%= link_to 'Изменить данные профиля', edit_admin_path(current_admin) %> &nbsp;|&nbsp;
      <%= link_to 'Зарегистрировать нового администратора', new_admin_path %>
      <%= link_to 'Выход', logout_path, method: "delete", :class => "btn btn-primary" %>
    </div>
<% end %>
<header>
  <div class="row">
    <div class="col-lg-4 main-logo">
      <%= link_to image_tag("logo.png", :alt => "logo", :size => "320x130", :class => "logo"), root_path %>
      <h3 class="under-logo">КОМБИКОРМОВОЕ ОБОРУДОВАНИЕ<br>
        ПЕЛЛЕТНОЕ ОБОРУДОВАНИЕ</h3>
    </div>
    <div class="col-lg-4">
      <h2><strong>ПРОИЗВОДИТЕЛЬ <br> И ПОСТАВЩИК</strong></h2>

      <p class="under-logo">СОВРЕМЕННОГО ВЫСОКОКАЧЕСТВЕННОГО ОБОРУДОВАНИЯ <br> ДЛЯ СЕЛЬСКОГО ХОЗЯЙСТВА</p>
    </div>
    <div class="col-lg-4 time">
      <p>С 8:00 до 17:00 мо МCК (<%= @hours %>)</p>
      <a href="#openModal">
        <i class="fa fa-phone fa-2x fa-fw tooltips"> <span>Нажмите, чтобы заказать обратный звонок</span></i></a>
      <span class="phone">+7 831 412-99-90</span>
    </div>
  </div>

  <div id="openModal" class="modalDialog">

    <div>
      <a href="#close" title="Close" class="close">X</a>

      <h1>Закажите обратный зконок</h1>

      <h3>Мы перезвоним Вам в течение получаса...</h3>

      <div class="col-md-6 col-sm-offset-3">
        <%= form_tag(controller: "callbacks", action: "fast_callback", method: "post") do %>
            <%= text_field_tag(:name, '', :placeholder => "Ваше имя", :class => 'form-control') %>
            <%= text_field_tag(:phone, '', :placeholder => "Телефон", :class => 'form-control') %>
            <%= submit_tag "ОТПРАВИТЬ" %>
        <% end %>
      </div>
    </div>
  </div>
</header>