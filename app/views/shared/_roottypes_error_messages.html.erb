<% if @roottype.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        Форма содержит <%= Russian::pluralize(@roottype.errors.count, "ошибку", "ошибки", "ошибок") %>.
      </div>
      <ul>
        <% @roottype.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>