<% breadcrumb :catalog %>
<p>
  <%= link_to 'Добавить материал', new_item_path, :class => "btn btn-primary" %>
  <%= link_to 'Добавить раздел', new_type_path, :class => "btn btn-primary" %>
</p>
<div class="catalog">
  <h3><%= @kombikorm.first.section_name %></h3>
  <ul>
    <% @kombikorm.each do |type| %>
        <li><h4><%= link_to "#{type.title} для комбикорма", type_path(type.id) %></h4></li>
        <% @items = Item.where("type_id = ?", type.id) %>
        <div class="row">
          <% if @items.first %>
              <% @items.each do |item| %>
                  <div class="col-md-3">
                    <%= image_tag(item.attached_assets.first.asset.url(:mini)) if !item.attached_assets.empty? && item.attached_assets.first.asset %>
                    <%= link_to item.title, item_path(item.id) %>
                  </div>
              <% end %>
          <% else %>
              <div class="col-md-3">
                Материалов нет
              </div>
          <% end %>
        </div>
        <hr>
    <% end %>
  </ul>
  <h3><%= @pellet.first.section_name %></h3>
  <ul>
    <% @pellet.each do |type| %>
        <li><h4><%= link_to "#{type.title} для пеллет", type_path(type.id) %></h4></li>
        <% @items = Item.where("type_id = ?", type.id) %>
        <div class="row">
          <% if @items.first %>
              <% @items.each do |item| %>
                  <div class="col-md-2">
                    <%= image_tag(item.attached_assets.first.asset.url(:mini)) if !item.attached_assets.empty? && item.attached_assets.first.asset %>
                    <%= link_to item.title, item_path(item.id) %>
                  </div>
              <% end %>
          <% else %>
              <div class="col-md-2">
                Материалов нет
              </div>
          <% end %>
        </div>
        <hr>
    <% end %>
  </ul>
</div>
