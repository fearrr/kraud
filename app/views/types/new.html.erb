<% breadcrumb :add_type %>
<%= render 'shared/types_error_messages' %>
<div class="col-md-4">
  <%= form_for(@type) do |f| %>

      <%= f.label 'Тип оборудования' %>
      <%= f.collection_select @type.part.roottype_id, Roottype.all, :id, :title, {}, {:class => 'form-control', :id=>'roottype_select' } %>

      <%= f.label :part_id, 'Раздел' %>
      <%= f.collection_select :part_id, @parts, :id, :title, {}, {:class => 'form-control', :id=>'parts_select' } %>

      <%= f.label :title, 'Наименование' %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.submit "Добавить", class: "btn btn-primary" %>
  <% end %>
</div>