<% breadcrumb :add_tiding %>
<%= render 'shared/tidings_error_messages' %>
<%= form_for(@tiding) do |f| %>

    <%= f.label :title, 'Заголовок' %></li>
    <%= f.text_field :title, class:'form-control' %>
    <%= f.label :body, 'Текст новости' %>
    <%= f.cktext_area :body, :class => 'form-control', :ckeditor => {:language => 'ru'} %>
    <div class="file_upload">+ <%= f.file_field :image %> </div> <b>Загрузить превью</b><br>
    <br />
    <%= f.text_field :created_at, "data-parsley-trigger" => "change", "data-parsley-date" => '', 'required' => '', :placeholder => 'Дата публикации', class: "datepicker form-control" %>
    <%= f.submit "Добавить", class: "btn btn-primary" %>

<% end %>