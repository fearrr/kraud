<% breadcrumb :contact %>
<p><%= link_to 'Редактировать страницу', edit_contact_path(@body), :class => "btn btn-primary" %></p>

<div id="map" style='width: 100%; height: 400px;'></div>

<div class="row">
  <div class="col-md-7 callback">
    <h4>Форма обратной связи</h4>

    <p>Задайте нам Ваш вопрос, и мы свяжемся с Вами в ближайшее время</p>
    <%= form_tag(controller: "callbacks", action: "slow_callback", method: "post") do %>
        <%= label_tag(:name, 'Ваше имя*') %>
        <%= text_field_tag(:name, '', :class => 'form-control') %>

        <%= label_tag(:email, 'Email*') %>
        <%= text_field_tag(:email, '', :class => 'form-control') %>

        <%= label_tag(:subject, 'Тема сообщения') %>
        <%= text_field_tag(:subject, '', :class => 'form-control') %>

        <%= label_tag(:message, 'Текст сообщения*') %>
        <%= text_area_tag(:message, '', :class => 'form-control') %>
        <%= submit_tag "ОТПРАВИТЬ", :class => "btn btn-sm btn-default" %>
    <% end %>
  </div>
  <div class="col-md-5">
    <%= raw(@body.body) %>
  </div>
</div>


<script type="text/javascript">
    var handler = Gmaps.build('Google');
    handler.buildMap({internal: {id: 'map'}}, function () {
        var markers = handler.addMarkers([
            {lat: 56.32414, lng: 44.00149, infowindow: "Офис"},
            {lat: 56.2994, lng: 44.0249, infowindow: "Склад"}
        ]);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        handler.getMap().setZoom(13);
    });
</script>