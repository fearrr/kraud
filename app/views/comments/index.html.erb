<% breadcrumb :comments %>
<p><%= link_to 'Добавить отзыв', new_comment_path, :class=>"btn btn-primary" %></p>
<% if @comments %>
    <% @comments.each do |comment| %>
        <% if !comment.public %>
            <% title = "<span class='comment-date'>дата создания: #{comment.created_at.strftime("%d.%m.%y")}, не опубликован</span>".html_safe %>
        <% else %>
            <% title = "<span class='comment-date'>дата публикации: #{comment.created_at.strftime("%d.%m.%y")}</span>".html_safe %>
        <% end %>

        <div class="blog-item comment-item">
          <%= image_tag('comment.png', size: "33x23") %>
          <p class="comment-author-title"><%= comment.name %> <%= title %></p>
          <p class="comment-body"><%= comment.body %></p>
          <%= link_to "Изменить", edit_comment_path(comment), :class=>"btn btn-sm btn-primary" %>
          <%= link_to "Удалить", comment, :class=>"btn btn-sm btn-danger", method: :delete, data: { confirm: "Вы уверены?" } %>
        </div>
    <% end %>
<% end %>
