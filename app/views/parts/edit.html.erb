<% breadcrumb :edit_part, @part %>
<%= render 'shared/parts_error_messages' %>
<div class="col-md-4">
  <%= form_for(@part) do |f| %>
      <%= f.label :roottype_id, 'Тип оборудования' %>
      <%= f.collection_select :roottype_id, Roottype.all, :id, :title, {:selected => @part.roottype_id}, {:class => 'form-control', :id=>'roottype_select' } %>
      <%= f.label :title, 'Наименование' %>
      <%= f.text_field :title, class: "form-control" %>
      <%= f.submit "Изменить", class: "btn btn-primary" %>
  <% end %>
</div>