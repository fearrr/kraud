<% breadcrumb :edit_action, @action %>
<%= render 'shared/actions_error_messages' %>
<%= form_for(@action, :as => :foo) do |f| %>

    <%= f.label :title, 'Заголовок' %></li>
    <%= f.text_field :title, class:'form-control' %>
    <%= f.label :body, 'Текст акции' %>
    <%= f.cktext_area :body, :class => 'form-control', :ckeditor => {:language => 'ru'} %>
    <div class="file_upload">+ <%= f.file_field :image %> </div> <b>Загрузить превью</b><br>
    <%= f.submit "Изменить", class: "btn btn-primary" %>


<% end %>